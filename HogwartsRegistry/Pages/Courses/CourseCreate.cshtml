@{
    ViewData["Title"] = "CourseCreate";
}

<h1>CourseCreate</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Course.CRN" class="control-label"></label>
                <input asp-for="Course.CRN" class="form-control" />
