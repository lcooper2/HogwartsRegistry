@page
@model HogwartsRegistry.Pages.Instructors.InstructorEditModel

@{
    ViewData["Title"] = "InstructorEdit";
}

<h1>InstructorEdit</h1>

<h4>Instructor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Instructor.FirstName" class="control-label"></label>
                <input asp-for="Instructor.FirstName" class="form-control" />
                <span asp-validation-for="Instructor.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instructor.LastName" class="control-label"></label>
                <input asp-for="Instructor.LastName" class="form-control" />
                <span asp-validation-for="Instructor.LastName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Instructor.Id" />
            <div class="form-group">
                <label asp-for="Instructor.InstructorId" class="control-label"></label>
                <input asp-for="Instructor.InstructorId" class="form-control" />
                <span asp-validation-for="Instructor.InstructorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instructor.Gender" class="control-label"></label>
                <select asp-for="Instructor.Gender" class="form-control">
                    <option value="M">Male</option>
                    <option value="F">Female</option>
                </select>
                <span asp-validation-for="Instructor.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
